{{/each}}

<h3>Editar Categoria</h3>
<div class="card" id="card-produto">
    <div class="card-body">
        <form action="/admin/categoria/edit" method="post">
            <input type="hidden" id="id" name="id" value="{{categoria._id}}">
            <label for="nome">Nome:</label>
            <input type="text" id="nome" name="nome" placeholder="Nome da Lista" value="{{categoria.nome}}"
                class="form-control">
            <br>
            <button type="submit" class="btn btn-success">Editar Categoria </button>
        </form>
    </div>

</div>