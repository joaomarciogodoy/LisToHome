<style>
    .aumenta {
        font-size: 18px;
    }

    .btn-add {
        margin-top: -20px;
    }
</style>

{{#each erros}}
<div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}

<h3 class="text-center">Selecione a lista que deseja adicionar o produto "{{produto.nome}}"</h3>
<br>
<br>

<div class="card w-50 mx-auto" id="card-produto">
    <div class="card-body">
        <form action="/admin/listaprodutos/nova" method="post" id="form-verify">

            <label for="lista">Lista:</label>
            <select class="form-select form-select-sm aumenta mb-4" name="lista" id="lista">

                {{#each listas}}
                <option value="{{nome}}">{{nome}}</option>
                {{else}}
                <option value="0"> Nenhuma lista cadastrada</option>
                {{/each}}

            </select>
            <input type="hidden" value="{{produto._id}}" name="id">
            <label for="nome">Nome:</label>
            <input type="text" value="{{produto.nome}}" id="nome" name="nome" placeholder="Nome do Produto"
                class="form-control">
            <br>

            <label for="preco">Preço:</label>
            <input type="number" value="{{produto.preco}}" min="0.5" step="0.5" id="preco" name="preco"
                placeholder="Preço do Produto" class="form-control">
            <br>

            <label for="categoria">Categoria:</label>
            <input type="text" readonly value="{{categoria.nome}}" name="categoria" class="form-control">
            <br><br>



        </form>
        <button class="btn btn-success btn-add" onclick="vai()">Adicionar Produto </button>
    </div>

</div>

<script>

    function vai() {
        form = document.getElementById('form-verify')
        if (window.confirm('A lista foi selecionada corretamente?')) {
            form.submit()

        } else {

        }
    }
</script>