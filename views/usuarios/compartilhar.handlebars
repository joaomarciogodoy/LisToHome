
<body>


<h2>Aqui estão todos os usuários, agora é só compartilhar :)</h2>
<br>

<div class="container-grid">
             {{#each usuarios}}
          <form action="/usuarios/compartilhar/salvar" method="post">
                   <div class="card" style="width: 15rem; height: 4rem" id="card-produto">
        <div class="card-body">

            <h5 class="card-title">{{nome}}</h5>
            <input class="card-title" hidden name="verificadorId" value="{{_id}}" type="text">
            <input class="card-title" hidden name="nome_lista" value="{{../nome_lista}}" type="text">
           <button type="submit" class="btn btn-success btn-share"><i class="fa-solid fa-share"></i></button>



        </div>
    </div>

          </form>
                {{/each}}
                </div>

              

</body>

</html>